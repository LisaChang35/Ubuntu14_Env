[credential]
	helper = cache --timeout=36000000
[color]
	ui = true
[push]
	default = matching
[core]
	editor = nvim
	autocrlf = input
[diff]
	tool = nvim -d
[merge]
	tool = nvim -d

[mergetool "nvim"]
        cmd = nvim -f -c \"Gdiff\" \"$MERGED\"

[difftool]
	prompt = false
[alias]
	d = difftool

